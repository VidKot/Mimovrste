<div>
  <% if user_signed_in? %>
    <%= link_to "Log out", destroy_user_session_path, method: :delete %>
  <% else %>
    <%= link_to "Log in", new_user_session_path %> |
    <%= link_to "Register", new_user_registration_path %>
  <% end %>
</div>
<% if @posts.any? %>
  <% @posts.each do |post| %>
    <%= render post %>
  <% end %>
<% else %>
  <p>No posts available.</p>
<% end %>
<% if user_signed_in? %>
  <%= link_to "New post", new_post_path %>
<% end %>